  <style>
    .card-img-overlay {
      background: rgba(0, 0, 0, 0.5); /* Fond noir transparent */
      opacity: 0; /* Opacité initiale à 0 pour l'effet de survol */
      transition: opacity 0.4s ease-in-out; /* Transition de l'opacité avec un effet */
    }
  
    .card:hover .card-img-overlay {
      opacity: 1; /* Opacité à 1 lors du survol */
    }
  
    .scroll-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #fff; /* Couleur du texte */
      cursor: pointer;
    }

    
  </style>

<script>
  // Ajoutez ce script à la fin du body ou utilisez-le dans un fichier externe
  document.addEventListener('DOMContentLoaded', function () {
    var cards = document.querySelectorAll('.card');

    cards.forEach(function (card) {
      card.addEventListener('mouseenter', function () {
        var scrollText = card.querySelector('.scroll-text');
        scrollText.style.animation = 'scrollAnimation 1s infinite linear';
      });

      card.addEventListener('mouseleave', function () {
        var scrollText = card.querySelector('.scroll-text');
        scrollText.style.animation = '';
      });
    });
  });
</script>

  
  

